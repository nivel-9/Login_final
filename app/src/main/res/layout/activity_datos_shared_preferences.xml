<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/formulario_background"
    tools:context=".DatosSharedPreferences"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">

        <TextView
            android:id="@+id/datos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATOS OBTENIDOS CON SHARED PREFERENCES"
            android:padding="7dp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:padding="7dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textViewGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Género:"
            android:padding="7dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textViewFechaNacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de Nacimiento:"
            android:padding="7dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textViewNivelEstudios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivel de Estudios:"
            android:padding="7dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textViewTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono:"
            android:padding="7dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textViewUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario:"
            android:padding="7dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textViewContraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña:"
            android:padding="7dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textViewReenvio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reenvío Activo:"
            android:padding="7dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"
            android:text="Ir a FileStream"
            android:backgroundTint="@color/white"
            android:textColor="#23062F"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>