<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/formulario_background"
    tools:context=".MostrarDatosFileStream">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATOS OBTENIDOS CON FILES STREAM"
            android:layout_marginLeft="25dp"
            android:padding="7dp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/textViewDatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"
            android:text="Ir a SQLite"
            android:backgroundTint="@color/white"
            android:textColor="#23062F"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>